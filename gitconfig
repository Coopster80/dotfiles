# vim: ft=gitconfig:
[user]
	name = Nolan Cooper
	email = nolancooper97@gmail.com
	signingkey = 6B94B9C7D78DD681
[core]
	editor = vim
[color]
	ui = auto
[color "branch"]
	current = cyan
	local = yellow
	remote = red
[color "diff"]
	meta = yellow bold
	frag = cyan
	old = red
	new = green
	whitespace = white reverse
[color "status"]
	added = green
	changed = yellow
	untracked = red
	branch = cyan
[pretty]
	detailed = format:%Cred%h%Creset -%C(auto)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset
[alias]
	amend = commit -a --amend
	cm = commit -m
	scm = commit -S -m
	br = branch
	ba = branch -a
	st = status
	conf = config --global -e
	hist = log --all --graph --pretty=detailed
	sum = log --pretty=detailed
	destroy = reset --hard HEAD
	up = pull --rebase
[push]
	default = simple
[include]
	path = ~/.work-gitconfig
